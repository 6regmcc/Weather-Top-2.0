<table class="ui table">

  <thead>
  <tr>
    <th>Time</th>
    <th>Code</th>
    <th>Temp</th>
    <th>Wind Speed</th>
    <th>Wind Direction</th>
    <th>Pressure</th>
    <th>Pressure</th>
  </tr>
  </thead>
  <tbody>
  {{#each station.readings}}
    <tr>
      <td>
        {{getLocalTime time}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temp}}
      </td>
      <td>
        {{wind}}
      </td>
      <td>
        {{windDirection}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
        <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button"><i class="icon trash"></i></a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>